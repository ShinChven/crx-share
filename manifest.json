
{
  "manifest_version": 3,
  "name": "Xrs Share",
  "version": "1.1",
  "permissions": ["activeTab", "scripting", "contextMenus", "clipboardWrite"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
